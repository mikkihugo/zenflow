{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "rust/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "test-*.ts",
    "vitest.config.ts"
  ]
}
