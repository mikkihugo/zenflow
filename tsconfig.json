{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Root-level overrides/additions only; inherit module/moduleResolution/etc from base
    "resolveJsonModule": true,
    "downlevelIteration": true,
  // Allow both source and tests as roots for type-checking
  "rootDirs": ["./src", "./tests"],
  // Ensure TS doesn't complain about tests being outside of rootDir
  "rootDir": "."
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}