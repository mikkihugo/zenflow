{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "moduleDetection": "force",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@coordination/*": ["coordination/*"],
      "@neural/*": ["neural/*"],
      "@memory/*": ["memory/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@interfaces/*": ["interfaces/*"],
      "@swarm-zen/*": ["swarm-zen/*"],
      "@api/*": ["api/*"],
      "@mcp/*": ["mcp/*"],
      "@config/*": ["config/*"],
      "@terminal/*": ["terminal/*"],
      "@tools/*": ["tools/*"],
      "@knowledge/*": ["knowledge/*"],
      "@database/*": ["database/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "isolatedModules": false,
    "skipDefaultLibCheck": true,
    "checkJs": false,
    "allowJs": true,
    "maxNodeModuleJsDepth": 0,
    "types": ["node", "jest", "react"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "deno_modules",
    "**/*.js",
    "**/*.test.js",
    "**/*.spec.js",
    "src/__tests__/**/*",
    "tests/**/*",
    "scripts/**/*",
    "benchmark/**/*",
    "examples/**/*",
    "src/terminal/vscode-bridge.ts",
    "ruv-FANN/**/*",
    "claude-zen-mcp/**/*",
    "src/coordination/diagnostics/*.ts",
    "src/coordination/diagnostics/**/*.ts",
    "src/sparc/**/*",
    "src/tools/**/*",
    "src/utils/agent-gap-analysis.ts",
    "src/coordination/github/**/*",
    "src/coordination/hive-mind/**/*",
    "src/coordination/maestro/**/*",
    "src/coordination/orchestration/**/*",
    "src/coordination/discovery/demo-*.ts",
    "src/coordination/discovery/test-*.ts",
    "src/coordination/load-balancing/**/*",
    "src/coordination/hooks/auto-agent-assignment.ts",
    "src/coordination/manager.ts",
    "src/coordination/mcp/**/*",
    "src/interfaces/mcp/advanced-tools.ts",
    "src/interfaces/mcp/advanced-tools-registry.ts",
    "src/interfaces/mcp/tools/monitoring-tools.ts",
    "src/interfaces/mcp/tools/orchestration-tools.ts",
    "src/interfaces/mcp/tool-registry.ts",
    "src/interfaces/mcp/external-mcp-client.ts",
    "src/interfaces/terminal/enhanced-terminal-router.tsx"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "strict": true,
      "noImplicitAny": true
    }
  }
}
