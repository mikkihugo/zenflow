{
  "name": "@claude-zen/kanban",
  "version": "1.0.0",
  "private": false,
  "description": "Professional workflow coordination engine with XState-powered state management",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "biome check .",
    "format": "biome format . --write",
    "_prepublishOnly_disabled": "pnpm run build"
  },
  "keywords": [
    "kanban",
    "workflow", 
    "xstate",
    "state-machine",
    "coordination",
    "wip-limits",
    "bottleneck-detection",
    "flow-optimization"
  ],
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "xstate": "^5.20.2",
    "immer": "^10.1.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "@biomejs/biome": "^1.9.4",
    "tsup": "^8.5.0", 
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}