{
  "name": "@claude-zen/workflows",
  "version": "1.0.0",
  "private": false,
  "description": "Advanced workflow engine with intelligent document import, coordination types, and workflow orchestration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint .",
    "_prepublishOnly_disabled": "pnpm run build",
    "docs:check": "node scripts/check-tsdoc.mjs",
    "docs:check-verbose": "node scripts/check-tsdoc.mjs --verbose --show-documented",
    "docs:check-strict": "node scripts/check-tsdoc.mjs --threshold 100",
    "docs:fix": "node scripts/fix-tsdoc.mjs",
    "docs:fix-verbose": "node scripts/fix-tsdoc.mjs --verbose",
    "docs:fix-opus": "node scripts/fix-tsdoc.mjs --model opus"
  },
  "keywords": [
    "workflows",
    "workflow-engine",
    "orchestration",
    "coordination",
    "document-import",
    "workflow-types",
    "automation",
    "process-management"
  ],
  "author": "Claude-Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/event-system": "file:../event-system",
    "@claude-zen/foundation": "file:../foundation",
    "async": "^3.2.6",
    "eventemitter3": "^5.0.1",
    "expr-eval": "^2.0.2",
    "mermaid": "^11.9.0",
    "node-cron": "^4.2.1",
    "p-limit": "^7.0.0",
    "xstate": "^5.20.2",
    "date-fns": "^4.1.0",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.0.9",
    "zod": "^3.23.8",
    "rxjs": "^7.8.1",
    "immer": "^10.1.1"
  },
  "devDependencies": {
    "@types/async": "^3.2.25",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.17.2",
    "eslint": "^9.33.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/workflows"
  }
}
