{
  "name": "@claude-zen/singularity-coder",
  "version": "1.0.0",
  "description": "Singularity Coder - Advanced file-aware AI engine powered by CodeMesh for intelligent codebase analysis and modification",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./bridge": {
      "types": "./dist/integration/code-mesh-bridge.d.ts",
      "import": "./dist/integration/code-mesh-bridge.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist",
    "build:rust": "cd rust-core && cargo build --release",
    "build:wasm": "cd rust-core/code-mesh-wasm && wasm-pack build --target nodejs",
    "build:all": "pnpm build:rust && pnpm build:wasm && pnpm build"
  },
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "@claude-zen/llm-providers": "workspace:*",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.0",
    "os-utils": "^0.0.14",
    "systeminformation": "^5.22.7",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "tsup": "^8.5.0",
    "vitest": "^1.6.1",
    "wasm-pack": "^0.12.1"
  },
  "optionalDependencies": {
    "@code-mesh/wasm": "file:./rust-core/code-mesh-wasm/pkg"
  },
  "files": [
    "dist",
    "rust-core/code-mesh-wasm/pkg",
    "typescript-core/dist",
    "README.md"
  ],
  "keywords": [
    "ai",
    "codebase",
    "analysis",
    "file-aware",
    "llm",
    "typescript",
    "rust",
    "wasm",
    "code-mesh",
    "opencode"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen",
    "directory": "packages/singularity-coder"
  },
  "private": true
}
