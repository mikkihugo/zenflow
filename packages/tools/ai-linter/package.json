{
  "name": "@claude-zen/ai-linter",
  "version": "1.0.0",
  "description": "AI-powered TypeScript/JavaScript linter with GPT integration",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
