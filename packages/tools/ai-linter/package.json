    "@claude-zen/foundation": "workspace:*",
    "@claude-zen/llm-providers": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
