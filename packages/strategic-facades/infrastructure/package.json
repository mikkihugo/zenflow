{
  "name": "@claude-zen/infrastructure",
  "version": "1.0.0",
  "description": "Strategic Infrastructure Interface Delegation - System infrastructure and platform services",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:ci": "vitest run",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude-zen",
    "infrastructure",
    "database",
    "storage",
    "telemetry",
    "load-balancing",
    "event-system",
    "strategic-interface",
    "delegation"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/foundation": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@claude-zen/database": "workspace:*",
    "@claude-zen/event-system": "workspace:*",
    "@claude-zen/load-balancing": "workspace:*",
    "@claude-zen/system-monitoring": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@claude-zen/database": {
      "optional": false
    },
    "@claude-zen/event-system": {
      "optional": false
    },
    "@claude-zen/load-balancing": {
      "optional": true
    },
    "@claude-zen/system-monitoring": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}