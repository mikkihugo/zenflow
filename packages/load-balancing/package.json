{
  "name": "@claude-zen/load-balancing",
  "version": "1.0.0",
  "description": "INTERNAL: Intelligent load balancing system - Private implementation detail of @claude-zen/brain",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "docs:check": "node scripts/check-tsdoc.mjs",
    "docs:check-verbose": "node scripts/check-tsdoc.mjs --verbose --show-documented",
    "docs:check-strict": "node scripts/check-tsdoc.mjs --threshold 100",
    "docs:fix": "node scripts/fix-tsdoc.mjs",
    "docs:fix-verbose": "node scripts/fix-tsdoc.mjs --verbose",
    "docs:fix-opus": "node scripts/fix-tsdoc.mjs --model opus"
  },
  "keywords": [
    "load-balancing",
    "machine-learning",
    "resource-management",
    "adaptive-algorithms",
    "health-monitoring",
    "auto-scaling",
    "task-routing",
    "agent-coordination",
    "intelligent-routing",
    "capacity-management",
    "ai"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/brain": "file:../brain",
    "@claude-zen/foundation": "file:../foundation",
    "@tensorflow/tfjs-node": "^4.22.0",
    "consistent-hashing": "^0.3.0",
    "eventemitter3": "^5.0.1",
    "hashring": "^3.2.0",
    "nanoid": "^5.1.5",
    "node-os-utils": "^1.3.7",
    "simple-statistics": "^7.8.3"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./algorithms": {
      "types": "./dist/algorithms/index.d.ts",
      "import": "./dist/algorithms/index.js"
    },
    "./capacity": {
      "types": "./dist/capacity/index.d.ts",
      "import": "./dist/capacity/index.js"
    },
    "./optimization": {
      "types": "./dist/optimization/index.d.ts",
      "import": "./dist/optimization/index.js"
    },
    "./routing": {
      "types": "./dist/routing/index.d.ts",
      "import": "./dist/routing/index.js"
    },
    "./strategies": {
      "types": "./dist/strategies/index.d.ts",
      "import": "./dist/strategies/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/load-balancing"
  },
  "publishConfig": {
    "access": "public"
  }
}
