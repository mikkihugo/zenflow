{
  "name": "@claude-zen/neural-forecasting",
  "version": "1.0.0-alpha.1",
  "description": "High-performance neural forecasting library with 27+ time series models: LSTM, N-BEATS, DeepAR, Transformers, and more",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "neuro-divergent/"
