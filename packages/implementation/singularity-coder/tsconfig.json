{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"composite": false,
		"incremental": false
	},
	"include": ["src/**/*"],
	"exclude": [
		"dist/**/*",
		"node_modules/**/*",
		"rust-core/**/*",
		"typescript-core/**/*"
	],
	"references": [
		{ "path": "../foundation" },
		{ "path": "../implementation-packages/llm-routing" }
	]
}
