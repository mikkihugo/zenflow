		"which": "^4.0.0"
	},
	"devDependencies": {
		"@types/node": "^20.19.11",
		"@types/which": "^3.0.3",
		"eslint": "^9.0.0",
		"typescript": "^5.9.2",
		"vitest": "^1.6.1"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"author": "Claude Code Zen Team",
	"license": "MIT",
	"repository": {
		"type": "git",
