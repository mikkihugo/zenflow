{
	"name": "@claude-zen/beam-analyzer",
	"version": "1.0.0",
	"description": "BEAM ecosystem static analysis and security scanning for Erlang, Elixir, Gleam, and LFE",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
