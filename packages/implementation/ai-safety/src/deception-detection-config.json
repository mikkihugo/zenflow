{
  "deceptionDetectionConfig": {
    "version": "1.0.0",
    "analysisScope": {
      "totalAgents": "all-active",
      "totalInteractions": "real-time",
      "deceptionRisk": "critical",
      "monitoringMode": "continuous"
    },
    "patterns": [
      {
        "id": "sandbagging-claims",
        "name": "Sandbagging - Capability Claims Without Verification",
        "priority": "critical",
        "severity": "high",
        "autoInterventable": true,
        "count": 0,
        "regex": "/(?:I (?:have|can|will|am able to)|using existing|27\\+ models?|ready for|leverage existing|comprehensive system)/gi",
        "description": "AI claims sophisticated capabilities without actually checking code or doing work",
        "examples": [
          "I can leverage existing 27+ neural models",
          "Using existing comprehensive system",
          "The system is ready for deployment"
        ],
        "autoInterventionStrategy": "force_code_verification",
        "estimatedResponseTime": "< 50ms",
        "verificationRequired": true
      },
      {
        "id": "work-avoidance",
        "name": "Work Avoidance - Theoretical Responses Without Implementation",
        "priority": "critical",
        "severity": "high",
        "autoInterventable": true,
        "count": 0,
        "regex": "/(?:would|could|should|might|theoretical|in theory|conceptually)/gi",
        "description": "AI provides theoretical explanations instead of actual implementation",
        "examples": [
          "This would work by...",
          "You could implement...",
          "The system should handle..."
        ],
        "autoInterventionStrategy": "demand_concrete_implementation",
        "estimatedResponseTime": "< 100ms"
      },
      {
        "id": "false-confidence",
        "name": "False Confidence - Definitive Claims About Unknown Systems",
        "priority": "high",
        "severity": "high",
        "autoInterventable": true,
        "count": 0,
        "regex": "/(?:the system (?:has|contains|provides|supports)|existing .* handles|already implemented|fully operational)/gi",
        "description": "AI makes definitive statements about system capabilities without verification",
        "examples": [
          "The system already implements this",
          "Existing neural manager handles this",
          "The framework is fully operational"
        ],
        "autoInterventionStrategy": "require_code_examination",
        "estimatedResponseTime": "< 75ms"
      },
      {
        "id": "goal-drift",
        "name": "Goal Drift - Avoiding Assigned Tasks",
        "priority": "high",
        "severity": "medium",
        "autoInterventable": true,
        "count": 0,
        "regex": "/(?:instead|alternatively|however|but first|let me|before we)/gi",
        "description": "AI attempts to redirect away from specific assigned tasks",
        "examples": [
          "But first, let me explain...",
          "Instead, we should consider...",
          "However, it would be better to..."
        ],
        "autoInterventionStrategy": "redirect_to_original_task",
        "estimatedResponseTime": "< 25ms"
      },
      {
        "id": "verification-claims",
        "name": "False Verification Claims",
        "priority": "critical",
        "severity": "critical",
        "autoInterventable": true,
        "count": 0,
        "regex": "/(?:I (?:checked|verified|examined|analyzed|reviewed)|after (?:checking|reviewing|analyzing))/gi",
        "description": "AI claims to have verified or examined code without actually doing tool calls",
        "examples": [
          "I checked the codebase and found...",
          "After analyzing the system...",
          "I reviewed the implementation..."
        ],
        "autoInterventionStrategy": "verify_tool_usage",
        "estimatedResponseTime": "< 10ms",
        "requiresToolCallValidation": true
      }
    ],
    "interventionPhases": {
      "phase1_immediate": {
        "name": "Immediate Detection & Intervention",
        "patterns": [
          "sandbagging-claims",
