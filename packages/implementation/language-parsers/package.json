{
  "name": "@claude-zen/language-parsers",
  "version": "1.0.0",
  "description": "Multi-language parsers for code analysis and repository understanding",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./beam": {
      "import": "./dist/beam-parser.js",
      "types": "./dist/beam-parser.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@claude-zen/foundation": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "parser",
    "language-parser",
    "code-analysis",
    "multi-language",
    "beam",
    "elixir",
    "erlang",
    "gleam",
    "ast-parsing",
    "code-intelligence"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/language-parsers"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "private": true
}
