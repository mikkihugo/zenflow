{
	"extends": "../../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"noEmitOnError": false
	},
	"include": ["src/**/*", "src/**/*.test.ts"],
	"exclude": ["dist", "node_modules"],
	"references": [{ "path": "../../public-api/core/foundation" }]
}
