{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "./",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["node"],
		"downlevelIteration": true,
		"noEmit": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"verbatimModuleSyntax": false
	},
	"include": ["index.ts", "src/**/*.ts", "src/**/*.d.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts",
		"__tests__"
	]
}
