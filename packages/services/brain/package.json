{
  "name": "@claude-zen/brain",
  "version": "1.0.0",
  "description": "Comprehensive neural brain system for claude-code-zen: neural networks, behavioral intelligence, cognitive patterns, adaptive learning, and brain coordination",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "build:rust": "cd ../../core/neural-ml/neural-core && cargo build --release",
    "build:rust:feedforward": "cd ../../core/neural-ml/neural-core && cargo build -p claude-zen-neural-feedforward --release",
    "build:rust:framework": "cd ../../core/neural-ml/neural-core && cargo build -p claude-zen-neural-framework --release",
    "build:rust:language": "cd ../../core/neural-ml/neural-core && cargo build -p claude-zen-neural-language --release",
    "build:rust:onnx": "cd ../../core/neural-ml/neural-core && cargo build -p claude-zen-neural-onnx --release",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:brain-js": "pnpm tsx test-brain-js-integration.ts",
    "test:rust": "cd ../../core/neural-ml/neural-core && cargo test",
    "test:rust:feedforward": "cd ../../core/neural-ml/neural-core && cargo test -p claude-zen-neural-feedforward",
    "test:rust:framework": "cd ../../core/neural-ml/neural-core && cargo test -p claude-zen-neural-framework",
    "test:rust:language": "cd ../../core/neural-ml/neural-core && cargo test -p claude-zen-neural-language",
    "test:rust:onnx": "cd ../../core/neural-ml/neural-core && cargo test -p claude-zen-neural-onnx",
    "clean": "rm -rf dist/",
    "dev": "concurrently \"pnpm run build:watch\" \"pnpm run test:watch\"",
    "lint": "NODE_OPTIONS=\"--max-old-space-size=10240\" eslint 'src/**/*.ts' --fix",
    "docs:check": "node scripts/check-tsdoc.mjs",
    "docs:check-verbose": "node scripts/check-tsdoc.mjs --verbose --show-documented",
    "docs:check-strict": "node scripts/check-tsdoc.mjs --threshold 100",
    "docs:fix": "node scripts/fix-tsdoc.mjs",
    "docs:fix-verbose": "node scripts/fix-tsdoc.mjs --verbose",
    "docs:fix-opus": "node scripts/fix-tsdoc.mjs --model opus"
  },
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "@claude-zen/database": "workspace:*",
    "@claude-zen/llm-providers": "workspace:*",
    "brain.js": "2.0.0-beta.24",
    "consistent-hashing": "^0.3.0",
    "d3-array": "^3.2.4",
    "density-clustering": "^1.3.0",
    "fft-js": "^0.0.12",
    "hashring": "^3.2.0",
    "ml-distance": "^4.0.1",
    "ml-hclust": "^3.1.0",
    "ml-kmeans": "^6.0.0",
    "ml-matrix": "^6.12.1",
    "ml-pca": "^4.1.1",
    "ml-random-forest": "^2.1.0",
    "ml-stat": "^1.3.3",
    "moving-averages": "^4.0.6",
    "natural": "^8.1.0",
    "node-os-utils": "^1.3.7",
    "regression": "^2.0.1",
    "simple-statistics": "^7.8.8",
    "synaptic": "^1.1.4",
    "trendyways": "^1.0.1",
    "zod": "^4.1.1"
  },
  "_dependencies_replaced_with_rust": {
    "_tensorflow_js_replaced": "@tensorflow/tfjs + @tensorflow/tfjs-node → claude-zen-neural-framework (Burn/Candle)",
    "_transformers_replaced": "@xenova/transformers → claude-zen-neural-language (ONNX + tokenizers)",
    "_onnx_replaced": "onnxruntime-node → claude-zen-neural-onnx (ort Rust bindings)"
  },
  "optionalDependencies": {
    "@claude-zen/dspy": "workspace:*",
    "@claude-zen/neural-ml": "workspace:*",
    "openai": "^5.13.1"
  },
  "_comment_neural_ml": "neural-ml is a private implementation detail - only brain package should access it",
  "_comment_dspy": "dspy is a private implementation detail - only brain package should access it",
  "_comment_agent_monitoring": "agent-monitoring is now integrated directly into brain package",
  "_comment_load_balancing_deprecated": "load-balancing is DEPRECATED - use brain event coordination for 1-2 user system",
  "devDependencies": {
    "@types/node": "22.17.1",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "brain",
    "neural-coordination",
    "cognitive-patterns",
    "neural-networks",
    "brain.js",
    "behavioral-intelligence",
    "adaptive-learning",
    "tensorflow",
    "rust",
    "claude-zen",
    "coordination"
  ],
  "author": "claude-code-zen Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/brain"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./coordinator": {
      "types": "./dist/brain-coordinator.d.ts",
      "import": "./dist/brain-coordinator.js"
    },
    "./neural": {
      "types": "./dist/neural-bridge.d.ts",
      "import": "./dist/neural-bridge.js"
    },
    "./brain-js": {
      "types": "./dist/brain-js-bridge.d.ts",
      "import": "./dist/brain-js-bridge.js"
    },
    "./behavioral": {
      "types": "./dist/behavioral-intelligence.d.ts",
      "import": "./dist/behavioral-intelligence.js"
    },
    "./adaptive": {
      "types": "./dist/adaptive-learning.d.ts",
      "import": "./dist/adaptive-learning.js"
    },
    "./coordination": {
      "types": "./dist/coordination/index.d.ts",
      "import": "./dist/coordination/index.js"
    },
    "./models": {
      "types": "./dist/models/index.d.ts",
      "import": "./dist/models/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "publishConfig": {
    "access": "restricted"
  }
}
