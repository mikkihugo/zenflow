{
  "name": "@claude-zen/database",
  "version": "1.0.1",
  "description": "INTERNAL: Multi-database abstraction layer - Private implementation detail of @claude-zen/foundation",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "docs:check": "node scripts/check-tsdoc.mjs",
    "docs:check-verbose": "node scripts/check-tsdoc.mjs --verbose --show-documented",
    "docs:check-strict": "node scripts/check-tsdoc.mjs --threshold 100",
    "docs:fix": "node scripts/fix-tsdoc.mjs",
    "docs:fix-verbose": "node scripts/fix-tsdoc.mjs --verbose",
    "docs:fix-opus": "node scripts/fix-tsdoc.mjs --model opus"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters/sqlite": {
      "types": "./dist/adapters/sqlite-adapter.d.ts",
      "import": "./dist/adapters/sqlite-adapter.js"
    },
    "./adapters/lancedb": {
      "types": "./dist/adapters/lancedb-adapter.d.ts",
      "import": "./dist/adapters/lancedb-adapter.js"
    },
    "./adapters/kuzu": {
      "types": "./dist/adapters/kuzu-adapter.d.ts",
      "import": "./dist/adapters/kuzu-adapter.js"
    },
    "./dao/relational": {
      "types": "./dist/dao/relational.dao.d.ts",
      "import": "./dist/dao/relational.dao.js"
    },
    "./dao/vector": {
      "types": "./dist/dao/vector.dao.d.ts",
      "import": "./dist/dao/vector.dao.js"
    },
    "./dao/graph": {
      "types": "./dist/dao/graph.dao.d.ts",
      "import": "./dist/dao/graph.dao.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "dependencies": {
    "@claude-zen/foundation": "file:../foundation",
    "@lancedb/lancedb": "^0.21.3",
    "better-sqlite3": "^12.2.0",
    "eventemitter3": "^5.0.1",
    "kuzu": "^0.11.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.17.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "database",
    "sqlite",
    "postgresql",
    "mysql",
    "lancedb",
    "kuzu",
    "graph-database",
    "vector-database",
    "multi-database",
    "dependency-injection",
    "typescript"
  ]
}
