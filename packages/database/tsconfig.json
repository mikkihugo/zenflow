{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "types": ["node"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "better-sqlite3": ["./src/stubs/better-sqlite3.d.ts"],
      "@lancedb/lancedb": ["./src/stubs/lancedb.d.ts"],
      "kuzu": ["./src/stubs/kuzu.d.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../foundation" }
  ]
}