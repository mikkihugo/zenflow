{
  "name": "@claude-zen/ai-linter",
  "version": "1.0.0",
  "description": "AI-powered universal linter with dynamic rule generation and ESLint integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "node dist/test-integration.js",
    "test:singularity": "node dist/test-singularity-linting.js",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai-linter",
    "eslint",
    "static-analysis",
    "code-quality",
    "ai-powered",
    "rule-generation",
    "linting",
    "claude-ai",
    "typescript",
    "javascript"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "@claude-zen/intelligence": "workspace:*",
    "@claude-zen/repo-analyzer": "workspace:*",
    "eslint": "^9.33.0",
    "prettier": "^3.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/typescript-estree": "^6.21.0",
    "@babel/parser": "^7.23.9",
    "@babel/traverse": "^7.23.9",
    "@babel/types": "^7.23.9",
    "ts-morph": "^21.0.1",
    "acorn": "^8.11.3",
    "acorn-walk": "^8.3.2",
    "chokidar": "^3.6.0",
    "fast-glob": "^3.3.2",
    "picomatch": "^3.0.1",
    "openai": "^4.28.0",
    "@anthropic-ai/sdk": "^0.60.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/babel__traverse": "^7.20.5", 
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "eslint": "^9.17.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen",
    "directory": "packages/ai-linter"
  },
  "bugs": {
    "url": "https://github.com/zen-neural/claude-code-zen/issues"
  },
  "homepage": "https://github.com/zen-neural/claude-code-zen/tree/main/packages/ai-linter"
}