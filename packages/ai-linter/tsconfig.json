{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "moduleResolution": "Node",
    "target": "ES2022",
    "module": "ES2022",
    "downlevelIteration": true,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../foundation"
    },
    {
      "path": "../llm-providers"
    },
    {
      "path": "../repo-analyzer"
    }
  ]
}