{
  "name": "@claude-zen/operations",
  "version": "1.0.0",
  "description": "Strategic Operations Interface Delegation - Monitoring, performance, and operational systems",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    }
  },
  "scripts": {
    "lint": "eslint src/ --ext .ts,.js",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ci": "vitest run",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude-zen",
    "operations",
    "monitoring",
    "performance",
    "agent-monitoring",
    "chaos-engineering",
    "load-balancing",
    "memory-orchestration",
    "strategic-interface",
    "delegation"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/foundation": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "eslint": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@eslint/js": "^9.33.0"
  },
  "peerDependencies": {
    "@claude-zen/agent-monitoring": "workspace:*",
    "@claude-zen/chaos-engineering": "workspace:*",
    "@claude-zen/memory": "workspace:*",
    "@claude-zen/telemetry": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@claude-zen/agent-monitoring": {
      "optional": false
    },
    "@claude-zen/chaos-engineering": {
      "optional": true
    },
    "@claude-zen/telemetry": {
      "optional": false
    },
    "@claude-zen/memory": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
