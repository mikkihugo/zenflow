{
	"name": "@claude-zen/development",
	"version": "2.0.0",
	"description": "Strategic Development Facade - Repository analysis, code analysis, linting, and development tools",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"lint": "eslint src/**/*.ts",
		"type-check": "tsc --noEmit"
	},
	"keywords": [
		"development",
		"code-analysis",
		"repository-analysis",
		"linting",
		"static-analysis",
		"ast",
		"refactoring",
		"code-quality",
		"strategic-facade"
	],
	"author": "Claude Code Zen",
	"license": "MIT",
	"dependencies": {
		"@claude-zen/foundation": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^20.19.11",
		"eslint": "^9.17.0",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"@eslint/js": "^9.33.0"
	},
	"peerDependencies": {
		"@claude-zen/code-analyzer": "workspace:*",
		"@claude-zen/git-operations": "workspace:*",
		"@claude-zen/ai-linter": "workspace:*",
		"@claude-zen/language-parsers": "workspace:*",
		"@claude-zen/repo-analyzer": "workspace:*",
		"@claude-zen/codeql": "workspace:*",
		"@claude-zen/beam-analyzer": "workspace:*",
		"@claude-zen/architecture": "workspace:*",
		"@claude-zen/sparc": "workspace:*"
	},
	"peerDependenciesMeta": {
		"@claude-zen/code-analyzer": {
			"optional": false
		},
		"@claude-zen/git-operations": {
			"optional": false
		},
		"@claude-zen/ai-linter": {
			"optional": true
		},
		"@claude-zen/language-parsers": {
			"optional": true
		},
		"@claude-zen/repo-analyzer": {
			"optional": false
		},
		"@claude-zen/codeql": {
			"optional": true
		},
		"@claude-zen/beam-analyzer": {
			"optional": true
		},
		"@claude-zen/architecture": {
			"optional": true
		},
		"@claude-zen/sparc": {
			"optional": false
		}
	},
	"files": [
		"dist/**/*",
		"README.md",
		"LICENSE"
	]
}
