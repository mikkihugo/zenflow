{
  "name": "@claude-zen/agui",
  "version": "1.0.0",
  "private": false,
  "description": "Autonomous Graphical User Interface library for human-in-the-loop interactions in autonomous systems",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "demo": "tsx examples/agui-demo.ts"
  },
  "keywords": [
    "agui",
    "terminal",
    "cli",
    "human-in-the-loop",
    "autonomous",
    "task-approval",
    "ui",
    "interaction"
  ],
  "author": "Claude-Zen Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/agui"
  }
}