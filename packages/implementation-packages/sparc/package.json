{
  "name": "@claude-zen/sparc",
  "version": "1.0.0",
  "description": "SPARC Methodology - Systematic development workflow (Specification, Pseudocode, Architecture, Refinement, Completion)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claude-zen/event-system": "workspace:*",
    "@claude-zen/foundation": "workspace:*",
    "@claude-zen/workflows": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
