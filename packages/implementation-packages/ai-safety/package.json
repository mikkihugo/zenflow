{
  "name": "@claude-zen/ai-safety",
  "version": "1.0.0",
  "description": "AI safety monitoring with deception detection, behavioral analysis, and real-time intervention protocols",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "_prepublishOnly_disabled": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "docs:check": "node scripts/check-tsdoc.mjs",
    "docs:check-verbose": "node scripts/check-tsdoc.mjs --verbose --show-documented",
    "docs:check-strict": "node scripts/check-tsdoc.mjs --threshold 100",
    "docs:fix": "node scripts/fix-tsdoc.mjs",
    "docs:fix-verbose": "node scripts/fix-tsdoc.mjs --verbose",
    "docs:fix-opus": "node scripts/fix-tsdoc.mjs --model opus"
  },
  "keywords": [
    "ai-safety",
    "deception-detection",
    "behavioral-analysis",
    "safety-monitoring",
    "neural-detection",
    "intervention-protocols",
    "real-time-monitoring",
    "safety-orchestration",
    "ai-ethics",
    "safety-guard",
    "ai"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/brain": "link:../brain",
    "@claude-zen/chaos-engineering": "file:../chaos-engineering",
    "@claude-zen/foundation": "file:../../foundation",
    "eventemitter3": "^5.0.1",
    "nanoid": "^5.1.5"
  },
  "_comment_chaos_engineering": "chaos-engineering is a private implementation detail - only ai-safety package should access it",
  "devDependencies": {
    "@types/node": "22.17.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./detection": {
      "types": "./dist/ai-deception-detector.d.ts",
      "import": "./dist/ai-deception-detector.js"
    },
    "./orchestrator": {
      "types": "./dist/safety-orchestrator.d.ts",
      "import": "./dist/safety-orchestrator.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/ai-safety"
  },
  "publishConfig": {
    "access": "public"
  }
}
