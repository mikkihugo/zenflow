{
  "name": "@claude-zen/telemetry",
  "version": "1.0.0",
  "description": "Core telemetry infrastructure for claude-code-zen - OpenTelemetry, metrics, and distributed tracing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "telemetry",
    "opentelemetry",
    "metrics",
    "tracing",
    "observability",
    "monitoring",
    "claude-zen"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@opentelemetry/exporter-prometheus": "^0.203.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "prom-client": "^15.1.3"
  },
  "optionalDependencies": {
    "@claude-zen/otel-collector": "link:../otel-collector"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@claude-zen/foundation": "workspace:*"
  }
}
