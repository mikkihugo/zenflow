{
  "name": "@claude-zen/event-system",
  "version": "1.0.1",
  "type": "module",
  "description": "Type-safe event system with domain validation, unified event layer (UEL), and advanced coordination capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "import": "./dist/validation/index.js"
    },
    "./factories": {
      "types": "./dist/factories/index.d.ts",
      "import": "./dist/factories/index.js"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "import": "./dist/registry/index.js"
    },
    "./manager": {
      "types": "./dist/manager/index.d.ts",
      "import": "./dist/manager/index.js"
    },
    "./compatibility": {
      "types": "./dist/compatibility/index.d.ts",
      "import": "./dist/compatibility/index.js"
    },
    "./system-integrations": {
      "types": "./dist/system-integrations/index.d.ts",
      "import": "./dist/system-integrations/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "docs:check": "node scripts/check-tsdoc.mjs",
    "docs:check-verbose": "node scripts/check-tsdoc.mjs --verbose --show-documented",
    "docs:check-strict": "node scripts/check-tsdoc.mjs --threshold 100",
    "docs:fix": "node scripts/fix-tsdoc.mjs",
    "docs:fix-verbose": "node scripts/fix-tsdoc.mjs --verbose",
    "docs:fix-opus": "node scripts/fix-tsdoc.mjs --model opus"
  },
  "files": [
    "dist/",
    "src/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "private": true,
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "event-system",
    "typescript",
    "type-safe",
    "event-bus",
    "coordination",
    "domain-validation",
    "unified-event-layer",
    "uel",
    "event-adapters",
    "event-factories",
    "migration-helpers"
  ],
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "koa-compose": "^4.1.0",
    "mitt": "^3.0.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@types/node": "22.17.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zen-ai/event-system.git",
    "directory": "packages/event-system"
  },
  "author": "Zen AI Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zen-ai/event-system/issues"
  },
  "homepage": "https://github.com/zen-ai/event-system#readme"
}
