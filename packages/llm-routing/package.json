{
  "name": "@claude-zen/llm-routing",
  "version": "1.0.0",
  "type": "module",
  "description": "Intelligent multi-provider LLM routing and management system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./stats": {
      "import": "./dist/stats/index.js",
      "types": "./dist/stats/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Linting disabled due to biome thread pool issues'",
    "format": "BIOME_DAEMON=0 biome format --write . --max-diagnostics=50"
  },
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "@claude-zen/event-system": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^22.17.2",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "llm",
    "routing",
    "multi-provider",
    "ai",
    "optimization",
    "claude-zen"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/llm-routing"
  }
}