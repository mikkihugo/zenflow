{
  "name": "@claude-zen/monitoring",
  "version": "1.0.0",
  "private": false,
  "description": "Comprehensive monitoring, analytics, and performance tracking system for distributed applications",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "monitoring",
    "analytics",
    "performance",
    "metrics",
    "real-time",
    "dashboard",
    "opentelemetry",
    "observability"
  ],
  "author": "Claude-Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/monitoring"
  }
}