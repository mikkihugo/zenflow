{
  "name": "@claude-zen/knowledge",
  "version": "1.0.0",
  "private": false,
  "description": "Advanced knowledge management system with distributed learning, reasoning, and storage backends",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "knowledge-management",
    "distributed-learning",
    "reasoning-engine",
    "knowledge-storage",
    "context-analysis",
    "intelligence-coordination",
    "knowledge-systems",
    "collaborative-reasoning"
  ],
  "author": "Claude-Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "@claude-zen/database": "workspace:*",
    "@claude-zen/event-system": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/knowledge"
  }
}