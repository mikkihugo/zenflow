{
  "name": "@claude-zen/intelligence",
  "version": "1.0.0",
  "description": "Strategic Intelligence Interface Delegation - AI/Neural/ML systems coordination",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    }
  },
  "scripts": {
    "lint": "eslint src/ --ext .ts,.js",
    "build": "tsc --project . --skipLibCheck",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ci": "vitest run",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude-zen",
    "intelligence",
    "ai",
    "strategic-interface",
    "delegation",
    "brain",
    "safety"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/foundation": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "eslint": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@eslint/js": "^9.33.0"
  },
  "peerDependencies": {
    "@claude-zen/ai-safety": "workspace:*",
    "@claude-zen/brain": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@claude-zen/brain": {
      "optional": false
    },
    "@claude-zen/ai-safety": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}