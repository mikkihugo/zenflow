{
  "name": "@claude-zen/gpu-acceleration",
  "version": "1.0.0-alpha.1", 
  "description": "GPU acceleration toolkit: CUDA-to-Rust transpiler, WebGPU backend, and WASM acceleration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "cuda-rust-wasm/",
    "webgpu/"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:wasm": "cd cuda-rust-wasm && cargo build --release --target wasm32-unknown-unknown",
    "build:native": "cd cuda-rust-wasm && cargo build --release",
    "test": "vitest run",
    "test:wasm": "cd cuda-rust-wasm && wasm-pack test --node",
    "clean": "rm -rf dist/ && cd cuda-rust-wasm && cargo clean"
  },
  "dependencies": {
    "@claude-zen/foundation": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vitest": "^2.1.5",
    "wasm-pack": "^0.12.1"
  },
  "keywords": [
    "gpu-acceleration",
    "cuda",
    "webgpu",
    "wasm",
    "transpiler",
    "rust",
    "high-performance-computing"
  ],
  "author": "claude-code-zen Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/gpu-acceleration"
  }
}