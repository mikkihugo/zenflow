{
  "name": "@claude-zen/foundation",
  "version": "1.1.1",
  "description": "Foundation utilities for claude-code-zen ecosystem - logging, telemetry, config, DI, storage, and LLM integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "RUN_INTEGRATION=true vitest run --poolOptions.threads.singleThread tests/integration.test.ts tests/claude-sdk.test.ts tests/llm-provider.test.ts",
    "test:performance": "RUN_PERFORMANCE=true vitest run tests/integration.test.ts tests/claude-sdk.test.ts",
    "test:all": "RUN_INTEGRATION=true RUN_PERFORMANCE=true vitest run",
    "docs:check": "node scripts/check-tsdoc.mjs",
    "docs:check-verbose": "node scripts/check-tsdoc.mjs --verbose --show-documented",
    "docs:check-strict": "node scripts/check-tsdoc.mjs --threshold 100",
    "docs:fix": "node scripts/fix-tsdoc.mjs",
    "docs:fix-verbose": "node scripts/fix-tsdoc.mjs --verbose",
    "docs:fix-opus": "node scripts/fix-tsdoc.mjs --model opus"
  },
  "keywords": [
    "foundation",
    "utilities",
    "logging",
    "telemetry",
    "observability",
    "metrics",
    "tracing",
    "opentelemetry",
    "prometheus",
    "dependency-injection",
    "config",
    "storage",
    "llm",
    "ai",
    "claude-code-zen",
    "infrastructure",
    "error-handling",
    "result-pattern",
    "circuit-breaker",
    "retry-logic",
    "typescript"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.83",
    "@logtape/logtape": "^1.0.4",
    "@manypkg/find-root": "^3.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-jaeger": "^1.25.0",
    "@opentelemetry/exporter-prometheus": "^0.52.0",
    "@opentelemetry/resources": "^1.25.0",
    "@opentelemetry/sdk-metrics": "^1.25.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "@opentelemetry/semantic-conventions": "^1.25.0",
    "@types/convict": "^6.1.6",
    "@types/opossum": "^8.1.9",
    "convict": "^6.2.4",
    "dotenv": "^17.2.1",
    "find-workspaces": "^0.3.1",
    "neverthrow": "^8.2.0",
    "opossum": "^9.0.0",
    "p-retry": "^6.2.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "@lancedb/lancedb": "^0.21.3",
    "better-sqlite3": "^12.2.0",
    "kuzu": "^0.11.1"
  },
  "_comment_database": "database is now integrated directly into foundation package",
  "optionalDependencies": {
    "@logtape/otel": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./llm-provider": {
      "import": "./dist/llm-provider.js",
      "types": "./dist/llm-provider.d.ts"
    },
    "./error-handling": {
      "import": "./dist/src/error-handling.js",
      "types": "./dist/src/error-handling.d.ts"
    },
    "./di": {
      "import": "./dist/di/index.js",
      "types": "./dist/di/index.d.ts"
    },
    "./di/container": {
      "import": "./dist/di/container/di-container.js",
      "types": "./dist/di/container/di-container.d.ts"
    },
    "./di/decorators/*": {
      "import": "./dist/di/decorators/*.js",
      "types": "./dist/di/decorators/*.d.ts"
    },
    "./di/tokens/*": {
      "import": "./dist/di/tokens/*.js",
      "types": "./dist/di/tokens/*.d.ts"
    },
    "./telemetry": {
      "import": "./dist/src/telemetry.js",
      "types": "./dist/src/telemetry.d.ts"
    },
    "./types": {
      "import": "./dist/src/types/index.js",
      "types": "./dist/src/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/foundation"
  },
  "publishConfig": {
    "access": "public"
  }
}
