{
  "name": "@claude-zen/adaptive-learning",
  "version": "1.0.0",
  "description": "Standalone adaptive learning library for behavioral optimization and pattern recognition",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "machine-learning",
    "adaptive-learning",
    "behavioral-optimization",
    "pattern-recognition",
    "performance-optimization",
    "ai",
    "claude-code-zen"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4",
    "@claude-zen/foundation": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "@types/node": "^20.10.6"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./learning-coordinator": {
      "import": "./dist/learning-coordinator.js",
      "types": "./dist/learning-coordinator.d.ts"
    },
    "./pattern-recognition": {
      "import": "./dist/pattern-recognition-engine.js",
      "types": "./dist/pattern-recognition-engine.d.ts"
    },
    "./performance-optimizer": {
      "import": "./dist/performance-optimizer.js",
      "types": "./dist/performance-optimizer.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "src/lib/adaptive-learning"
  },
  "publishConfig": {
    "access": "public"
  }
}