{
	"name": "@claude-zen/neural-ml",
	"version": "1.0.0-alpha.1",
	"description": "INTERNAL: High-performance neural machine learning library - Private implementation detail of @claude-zen/brain",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/",
		"neural-core/"
	],
	"scripts": {
		"build": "echo 'Neural-ML build temporarily disabled due to TypeScript issues'",
		"build:rust": "cd neural-core && cargo build --release",
		"test": "vitest run",
		"test:rust": "cd neural-core && cargo test",
		"clean": "rm -rf dist/ && cd neural-core && cargo clean",
		"docs:check": "node scripts/check-tsdoc.mjs",
		"docs:check-verbose": "node scripts/check-tsdoc.mjs --verbose --show-documented",
		"docs:check-strict": "node scripts/check-tsdoc.mjs --threshold 100",
		"docs:fix": "node scripts/fix-tsdoc.mjs",
		"docs:fix-verbose": "node scripts/fix-tsdoc.mjs --verbose",
		"docs:fix-opus": "node scripts/fix-tsdoc.mjs --model opus"
	},
	"dependencies": {
		"@claude-zen/foundation": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "22.17.1",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"keywords": [
		"neural-ml",
		"machine-learning",
		"deep-learning",
		"time-series",
		"forecasting",
		"classification",
		"lstm",
		"transformers",
		"n-beats",
		"deepar",
		"rust",
		"neural-networks",
		"bayesian-optimization",
		"multi-objective-optimization",
		"dspy-teleprompters",
		"gradient-optimization",
		"pattern-learning"
	],
	"author": "claude-code-zen Team",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/zen-neural/claude-code-zen.git",
		"directory": "packages/neural-ml"
	}
}
