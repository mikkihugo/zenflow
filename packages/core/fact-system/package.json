{
  "name": "@claude-zen/fact-system",
  "version": "1.0.0",
  "description": "INTERNAL: FACT system with Rust engine - Private implementation detail of @claude-zen/knowledge",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:rust": "echo 'Rust build temporarily disabled due to workspace conflicts'",
    "build:wasm": "cd src/rust && wasm-pack build --target nodejs --out-dir ../../wasm",
    "dev": "tsc --watch",
    "clean": "rm -rf dist wasm target",
    "_prepublishOnly_disabled": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:rust": "cd src/rust && cargo test",
    "bench": "cd src/rust && cargo bench",
    "docs:check": "node scripts/check-tsdoc.mjs",
    "docs:check-verbose": "node scripts/check-tsdoc.mjs --verbose --show-documented",
    "docs:check-strict": "node scripts/check-tsdoc.mjs --threshold 100",
    "docs:fix": "node scripts/fix-tsdoc.mjs",
    "docs:fix-verbose": "node scripts/fix-tsdoc.mjs --verbose",
    "docs:fix-opus": "node scripts/fix-tsdoc.mjs --model opus"
  },
  "keywords": [
    "fact-system",
    "context-processing",
    "github-integration",
    "knowledge-management",
    "rust-engine",
    "typescript-api",
    "high-performance",
    "caching",
    "external-apis",
    "ai"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "dependencies": {
    "@claude-zen/foundation": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/src/typescript/fact-client.d.ts",
      "import": "./dist/src/typescript/fact-client.js"
    },
    "./bridge": {
      "types": "./dist/src/typescript/fact-bridge.d.ts",
      "import": "./dist/src/typescript/fact-bridge.js"
    },
    "./cache": {
      "types": "./dist/src/typescript/intelligent-cache.d.ts",
      "import": "./dist/src/typescript/intelligent-cache.js"
    },
    "./connectors": {
      "types": "./dist/src/typescript/connectors/index.d.ts",
      "import": "./dist/src/typescript/connectors/index.js"
    },
    "./processors": {
      "types": "./dist/src/typescript/processors/index.d.ts",
      "import": "./dist/src/typescript/processors/index.js"
    }
  },
  "files": [
    "dist",
    "wasm",
    "src/rust/target/release/fact-tools",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zen-neural/claude-code-zen.git",
    "directory": "packages/fact-system"
  }
}
