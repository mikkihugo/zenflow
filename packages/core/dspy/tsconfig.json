{
	"extends": "../../../tsconfig.base.json",
	"compilerOptions": {
		"verbatimModuleSyntax": false,
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": ["node"],
		"rootDir": ".",
		"outDir": "./dist"
	},
	"include": ["index.ts", "src/**/*.ts"],
	"exclude": [
		"dist/**/*",
		"node_modules/**/*",
		"**/*.test.ts",
		"**/*.spec.ts",
		"src/__tests__/**/*"
	]
}
