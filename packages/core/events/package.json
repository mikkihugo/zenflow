{
  "name": "@claude-zen/events",
  "version": "1.0.0",
  "description": "Unified event contracts and coordination for claude-code-zen - integrates with foundation event registry",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.js"
    },
    "./coordination": {
      "types": "./dist/coordination/index.d.ts",
      "import": "./dist/coordination/index.js"
    },
    "./saga": {
      "types": "./dist/saga/index.d.ts",
      "import": "./dist/saga/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch", 
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "lint": "eslint src --fix"
  },
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "zod": "^3.23.8",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "eslint": "^9.33.0",
    "@types/node": "22.17.1"
  },
  "keywords": [
    "events",
    "coordination", 
    "event-driven",
    "contracts",
    "saga",
    "workflow",
    "brain",
    "document-intelligence",
    "foundation-registry"
  ],
  "author": "Claude Code Zen Team",
  "license": "MIT",
  "private": true
}