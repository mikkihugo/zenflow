{
  "name": "@claude-zen/memory",
  "version": "1.0.0",
  "description": "Advanced memory coordination and orchestration system with intelligent memory management",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claude-zen/event-system": "workspace:*",
    "@claude-zen/foundation": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "keywords": [
    "memory-orchestration",
    "memory-coordination",
    "unified-memory",
    "memory-management",
    "coordination",
    "caching-strategies"
  ],
  "author": "Claude-Zen Team",
  "license": "MIT"
}
