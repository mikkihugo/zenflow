{
  "name": "@claude-zen/server",
  "version": "1.0.0-alpha.44",
  "type": "module",
  "description": "Claude Code Zen Server: Backend API service for AI swarm orchestration platform with neural networks and coordination system",
  "main": "dist/server.js",
  "bin": {
    "claude-zen-server": "dist/server.js"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "npx tsx src/main.ts web --port 3000",
    "dev:watch": "nodemon",
    "debug": "node --inspect-brk -r tsx/cjs src/claude-zen-core.ts",
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "build:wasm": "cd src/neural/wasm && ./scripts/build-wasm.sh",
    "build:neural-wasm": "cd src/neural/rust/wasm-api && ./build.sh",
    "build:bindings": "cd src/bindings && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run src/__tests__/integration",
    "test:e2e": "vitest run src/__tests__/e2e",
    "lint": "echo 'Linting disabled due to biome thread pool issues'",
    "format": "BIOME_DAEMON=0 biome format --write . --max-diagnostics=50",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@claude-zen/foundation": "workspace:*",
    "@claude-zen/event-system": "workspace:*",
    "@claude-zen/database": "workspace:*",
    "@claude-zen/brain": "workspace:*",
    "@claude-zen/dspy": "workspace:*",
    "@claude-zen/adaptive-learning": "workspace:*",
    "@claude-zen/neural-forecasting": "workspace:*",
    "@claude-zen/ai-safety": "workspace:*",
    "@claude-zen/knowledge": "workspace:*",
    "@claude-zen/chaos-engineering": "workspace:*",
    "@claude-zen/agui": "workspace:*",
    "@claude-zen/monitoring": "workspace:*",
    "@claude-zen/agent-monitoring": "workspace:*",
    "@claude-zen/load-balancing": "workspace:*",
    "@claude-zen/optimization": "workspace:*",
    "@claude-zen/teamwork": "workspace:*",
    "@claude-zen/workflows": "workspace:*",
    "@claude-zen/fact-system": "workspace:*",
    "@claude-zen/gpu-acceleration": "workspace:*",
    "@godaddy/terminus": "^4.12.1",
    "@lancedb/lancedb": "^0.21.2",
    "@logtape/file": "^1.0.4",
    "@logtape/logtape": "^1.0.4",
    "@octokit/rest": "^22.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.5.0",
