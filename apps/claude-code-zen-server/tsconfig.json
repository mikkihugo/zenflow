{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitThis": false,
    "downlevelIteration": true,
    "paths": {
      "@claude-zen/foundation": ["../../packages/foundation/src", "../../packages/foundation/dist"],
      "@claude-zen/infrastructure": ["../../packages/strategic-facades/infrastructure/src", "../../packages/strategic-facades/infrastructure/dist"],
      "@claude-zen/intelligence": ["../../packages/strategic-facades/intelligence/src", "../../packages/strategic-facades/intelligence/dist"],
      "@claude-zen/enterprise": ["../../packages/strategic-facades/enterprise/src", "../../packages/strategic-facades/enterprise/dist"],
      "@claude-zen/operations": ["../../packages/strategic-facades/operations/src", "../../packages/strategic-facades/operations/dist"],
      "@claude-zen/*": [
        "../../packages/implementation-packages/*/src", 
        "../../packages/implementation-packages/*/dist",
        "../../packages/strategic-facades/*/src",
        "../../packages/strategic-facades/*/dist",
        "../../packages/foundation/src",
        "../../packages/foundation/dist"
      ],
      "$lib/*": ["./src/lib/*"],
      "$components/*": ["./src/components/*"],
      "$stores/*": ["./src/stores/*"],
      "$utils/*": ["./src/utils/*"],
      "$types/*": ["./src/types/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*"
  ],
  "references": [
    // Foundation Layer
    { "path": "../../packages/foundation" },
    
    // Strategic Facades 
    { "path": "../../packages/infrastructure" },
    { "path": "../../packages/intelligence" },
    { "path": "../../packages/enterprise" },
    { "path": "../../packages/operations" },
    { "path": "../../packages/development" },
    
    // Implementation Packages (selected core ones used directly)
    { "path": "../../packages/implementation-packages/database" },
    { "path": "../../packages/implementation-packages/memory" },
    { "path": "../../packages/implementation-packages/neural-ml" },
    { "path": "../../packages/implementation-packages/fact-system" },
    { "path": "../../packages/implementation-packages/chaos-engineering" },
    { "path": "../../packages/implementation-packages/dspy" },
    { "path": "../../packages/implementation-packages/llm-routing" },
    { "path": "../../packages/implementation-packages/enterprise-coordination" },
    { "path": "../../packages/implementation-packages/git-operations" },
    { "path": "../../packages/implementation-packages/code-analyzer" }
  ]
}