{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "paths": {
      "@claude-zen/foundation": [
        "../../packages/core/foundation/dist/src"
      ],
      "@claude-zen/database": [
        "../../packages/core/database/dist"
      ],
      "@claude-zen/*": [
        "../../packages/core/*/dist",
        "../../packages/services/*/dist",
        "../../packages/integrations/*/dist",
        "../../packages/tools/*/dist"
      ],
      "$lib/*": ["./src/lib/*"],
      "$components/*": ["./src/components/*"],
      "$stores/*": ["./src/stores/*"],
      "$utils/*": ["./src/utils/*"],
      "$types/*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
  "__tests__/**/*",
  "src/__tests__/**/*",
    "../../packages-old/**/*"
  ]
}
