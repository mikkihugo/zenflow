{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitThis": false,
    "downlevelIteration": true,
    "paths": {
      "@claude-zen/*": ["../../packages/*/dist", "../../packages/*/src"],
      "$lib/*": ["./src/lib/*"],
      "$components/*": ["./src/components/*"],
      "$stores/*": ["./src/stores/*"],
      "$utils/*": ["./src/utils/*"],
      "$types/*": ["./src/types/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../../packages/foundation" },
    { "path": "../../packages/event-system" },
    { "path": "../../packages/private-packages/database" },
    { "path": "../../packages/brain" },
    { "path": "../../packages/private-packages/fact-system" },
    { "path": "../../packages/private-packages/agent-monitoring" },
    { "path": "../../packages/teamwork" },
    { "path": "../../packages/ai-safety" },
    { "path": "../../packages/knowledge" },
    { "path": "../../packages/private-packages/chaos-engineering" },
    { "path": "../../packages/agent-manager" },
    { "path": "../../packages/private-packages/dspy" },
    { "path": "../../packages/llm-routing" },
    { "path": "../../packages/workflows" },
    { "path": "../../packages/sparc" },
    { "path": "../../packages/multi-level-orchestration" },
    { "path": "../../packages/private-packages/memory" },
    { "path": "../../packages/coordination-core" },
    { "path": "../../packages/private-packages/monitoring" },
    { "path": "../../packages/private-packages/neural-ml" },
    { "path": "../../packages/safe-framework" },
    { "path": "../../packages/agui" }
  ]
}