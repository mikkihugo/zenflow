@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
	@apply h-full bg-gray-50;
	font-family: 'Quicksand', system-ui, -apple-system, sans-serif;
}

/* Custom font */
@font-face {
	font-family: 'Quicksand';
	src: url('/fonts/Quicksand.ttf') format('truetype');
	font-display: swap;
	font-weight: 300 700;
}