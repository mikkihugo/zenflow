{
  "name": "@claude-zen/code-complexity-scanner-plugin",
  "version": "1.0.0",
  "description": "Code complexity analysis plugin with AI-powered refactoring suggestions",
  "main": "index.js",
  "type": "module",
  "keywords": [
    "claude-zen",
    "plugin",
    "code-analysis",
    "complexity",
    "refactoring"
  ],
  "author": "Claude Zen Team",
  "license": "MIT",
  "dependencies": {
    "escomplex": "^1.3.0",
    "glob": "^10.0.0"
  },
  "claudeZenPlugin": {
    "name": "code-complexity-scanner",
    "category": "scanner",
    "capabilities": [
      "cyclomatic-complexity-analysis",
      "halstead-metrics",
      "maintainability-index",
      "ai-refactor-suggestions",
      "severity-classification"
    ],
    "fileTypes": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ],
    "config": {
      "complexityThreshold": 10,
      "filePatterns": [
        "**/*.{js,jsx,ts,tsx}"
      ],
      "ignorePatterns": [
        "node_modules/**",
        ".git/**",
        ".hive-mind/**",
        "dist/**"
      ],
      "enableRefactorSuggestions": true
    }
  }
}
