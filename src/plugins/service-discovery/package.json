{
  "name": "@claude-zen/service-discovery-plugin",
  "version": "1.0.0",
  "description": "Service registry management, health checks, and discovery for microservices",
  "main": "index.js",
  "type": "module",
  "keywords": ["claude-zen", "plugin", "service-discovery", "microservices", "health-checks", "registry"],
  "author": "Claude Zen Team",
  "license": "MIT",
  "dependencies": {
    "glob": "^10.0.0"
  },
  "optionalDependencies": {
    "js-yaml": "^4.1.0"
  },
  "peerDependencies": {
    "@claude-zen/core": "^2.1.0"
  },
  "claudeZenPlugin": {
    "name": "service-discovery",
    "category": "infrastructure",
    "capabilities": [
      "service-discovery",
      "health-monitoring",
      "service-registry",
      "auto-registration",
      "dependency-mapping",
      "port-detection",
      "protocol-support",
      "endpoint-discovery"
    ],
    "serviceTypes": [
      {
        "type": "nodejs",
        "detection": ["package.json"],
        "healthEndpoint": "/health"
      },
      {
        "type": "python",
        "detection": ["requirements.txt", "setup.py", "main.py"],
        "healthEndpoint": "/health"
      },
      {
        "type": "go",
        "detection": ["go.mod", "main.go"],
        "healthEndpoint": "/health"
      },
      {
        "type": "docker",
        "detection": ["Dockerfile", "docker-compose.yml"],
        "healthEndpoint": "/health"
      }
    ],
    "protocols": ["http", "https", "grpc", "tcp"],
    "features": {
      "autoDiscovery": true,
      "autoRegistration": true,
      "healthMonitoring": true,
      "dependencyMapping": true,
      "portDetection": true,
      "endpointGeneration": true,
      "registryPersistence": true
    },
    "config": {
      "servicesDir": "services",
      "healthCheckTimeout": 5000,
      "discoveryInterval": 30000,
      "portRange": { "min": 3000, "max": 9999 },
      "autoRegister": true,
      "healthEndpoint": "/health"
    },
    "registry": {
      "format": "json",
      "location": ".hive-mind/service-registry.json",
      "backup": true,
      "versioned": true
    },
    "monitoring": {
      "healthChecks": true,
      "dependencyTracking": true,
      "performanceMetrics": false,
      "alerting": false
    }
  }
}