{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn",
        "noConsole": "off",
        "noDebugger": "warn"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "warn",
        "noUselessElse": "warn"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": { "maxAllowedComplexity": 15 }
        }
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "error",
        "noUndeclaredVariables": "warn"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5"
    },
    "globals": ["process", "Buffer", "__dirname", "__filename", "console"]
  },
  "files": {
    "includes": ["src/**/*", "scripts/**/*", "tests/**/*"],
    "ignores": [
      "**/node_modules/**",
      "**/dist/**", 
      "**/build/**",
      "**/docs/**",
      "**/*.d.ts"
    ]
  }
}