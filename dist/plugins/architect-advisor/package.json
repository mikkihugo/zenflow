{
  "name": "@claude-zen/architect-advisor-plugin",
  "version": "1.0.0",
  "description": "AI-powered ADR generation plugin for Claude Zen",
  "main": "index.js",
  "type": "module",
  "keywords": ["claude-zen", "plugin", "adr", "architecture", "ai"],
  "author": "Claude Zen Team",
  "license": "MIT",
  "dependencies": {
    "nanoid": "^4.0.0"
  },
  "claudeZenPlugin": {
    "name": "architect-advisor",
    "category": "architecture",
    "capabilities": ["adr-generation", "system-analysis", "pattern-detection"],
    "config": {
      "confidence_threshold": 0.75,
      "analysis_types": ["performance", "scalability", "security", "architecture"],
      "approval_required": true
    }
  }
}