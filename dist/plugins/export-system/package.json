{
  "name": "@claude-zen/export-system-plugin",
  "version": "1.0.0", 
  "description": "Multi-format export and reporting system for Claude Zen",
  "main": "index.js",
  "type": "module",
  "keywords": ["claude-zen", "plugin", "export", "reports", "pdf", "html", "csv", "markdown"],
  "author": "Claude Zen Team",
  "license": "MIT",
  "dependencies": {
    "glob": "^10.0.0"
  },
  "optionalDependencies": {
    "puppeteer": "^21.0.0"
  },
  "peerDependencies": {
    "@claude-zen/core": "^2.1.0"
  },
  "claudeZenPlugin": {
    "name": "export-system",
    "category": "reporting",
    "capabilities": [
      "pdf-generation",
      "html-export",
      "json-export", 
      "csv-export",
      "markdown-export",
      "template-system",
      "batch-processing",
      "custom-formatting"
    ],
    "formats": [
      {
        "name": "pdf",
        "description": "PDF documents with styling and formatting",
        "requires": "puppeteer (optional)"
      },
      {
        "name": "html",
        "description": "HTML documents with CSS styling",
        "builtin": true
      },
      {
        "name": "json",
        "description": "Structured JSON data with metadata",
        "builtin": true
      },
      {
        "name": "csv",
        "description": "Comma-separated values for spreadsheets",
        "builtin": true
      },
      {
        "name": "markdown",
        "description": "Markdown documents for documentation",
        "builtin": true
      }
    ],
    "templates": [
      "swarm-report",
      "task-summary",
      "system-health"
    ],
    "config": {
      "outputDir": "./exports",
      "templatesDir": "./.hive-mind/templates",
      "defaultFormat": "pdf",
      "timestamp": true,
      "compress": false
    },
    "features": {
      "templating": true,
      "multiFormat": true,
      "customTemplates": true,
      "batchExport": true,
      "fileNaming": true
    }
  }
}