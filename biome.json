{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "lineWidth": 80,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn",
        "noConsole": "warn",
        "noDebugger": "error",
        "useAwait": "error",
        "noThenProperty": "error",
        "noDoubleEquals": "error",
        "noImplicitAnyLet": "error",
        "noUnsafeDeclarationMerging": "error"
      },
      "style": {
        "useConst": "warn",
        "useTemplate": "warn",
        "noUselessElse": "warn",
        "useImportType": "warn",
        "useNodejsImportProtocol": "error",
        "useEnumInitializers": "warn",
        "useExportType": "warn"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": { "maxAllowedComplexity": 15 }
        },
        "noUselessTernary": "warn",
        "useFlatMap": "warn",
        "noForEach": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "noUnusedFunctionParameters": "warn",
        "noUnusedLabels": "warn",
        "noUndeclaredVariables": "error",
        "useImportExtensions": {
          "level": "warn",
          "options": {
            "forceJsExtensions": false
          }
        },
        "noUnsafeOptionalChaining": "error",
        "useValidForDirection": "error"
      },
      "performance": {
        "noDelete": "warn",
        "noAccumulatingSpread": "warn"
      },
      "security": {
        "noGlobalEval": "error",
        "noDangerouslySetInnerHtml": "error"
      },
      "nursery": {
        "noSecrets": "error"
      }
    }
  },
  "assist": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5"
    },
    "globals": ["process", "Buffer", "__dirname", "__filename", "console"]
  },
  "files": {
    "includes": ["src/**/*", "scripts/**/*", "packages/*/src/**/*", "apps/*/src/**/*"]
  }
}